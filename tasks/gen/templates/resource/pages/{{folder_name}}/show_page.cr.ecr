class <%= pluralized_resource %>::Show < BrowserAction
  needs <%= underscored_resource %> : <%= resource %>
  quick_def page_title, "Show"

  def content
    h1 "The record"
    ul do
      <%- columns.each do |column|  -%>
      li do
        text "<%= column.name %>: "
        strong @<%= underscored_resource %>.<%= column.name %>
      end
      <%- end -%>
    end
  end
end
